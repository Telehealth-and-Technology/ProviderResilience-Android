<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/videos"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btn_proqol"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:contentDescription="Professional quality of life"
                    android:padding="10dip"
                    android:src="@drawable/ico_proqol" />

                <TextView
                    android:layout_width="10dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/txt_proqol"
                    style="@style/ScaleFontLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="Professional Quality of Life"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <!-- END -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/clock"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btn_rrclock"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:contentDescription="R and R Clock"
                    android:padding="10dip"
                    android:src="@drawable/ico_clock" />

                <TextView
                    android:layout_width="10dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/txt_rrclock"
                    style="@style/ScaleFontLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="R &amp; R Clock"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <!-- END -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/burnout"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btn_burnout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:contentDescription="burnout"
                    android:padding="10dip"
                    android:src="@drawable/ico_burnout" />

                <TextView
                    android:layout_width="10dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/txt_burnout"
                    style="@style/ScaleFontLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="Burnout"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <!-- END -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/builderskillers"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btn_builderskillers"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:contentDescription="Resilience Builders and Killers"
                    android:padding="10dip"
                    android:src="@drawable/ico_builderskillers" />

                <TextView
                    android:layout_width="10dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/txt_builderskillers"
                    style="@style/ScaleFontLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="Resilience Builders/Killers"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <!-- END -->

        </LinearLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2" />
        
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        layout="@layout/main_menu" />

</LinearLayout>