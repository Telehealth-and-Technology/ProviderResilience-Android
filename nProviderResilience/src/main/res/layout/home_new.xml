<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_clocktitle"
        style="@style/ScaleFontMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#aaaaaa"
        android:gravity="center_vertical|left"
        android:padding="5dip"
        android:text="RESILIENCE RATING"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_lowlabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="right|bottom"
            android:text="Low"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_gradientarc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_rratingvalue"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="12"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_hilabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="left|bottom"
            android:text="High"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_divider"
        style="@style/ScaleFontMedium"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0"
        android:background="#aaaaaa"
        android:gravity="center_vertical|left"
        android:padding="5dip"
        android:textColor="#000000" />

    <!-- START RR CLOCK -->

    <TextView
        android:id="@+id/tv_timesincelabel"
        style="@style/ScaleFontMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dip"
        android:text="Time since your last vacation:"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/flClock"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_weight="0" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_clock_leftedge"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:contentDescription="Videos"
                android:scaleType="fitXY"
                android:src="@drawable/clock_leftedge" />

            <ImageView
                android:id="@+id/iv_clock_slice"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:contentDescription="Videos"
                android:scaleType="fitXY"
                android:src="@drawable/clock_slice" />

            <ImageView
                android:id="@+id/iv_clock_rightedge"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:contentDescription="Videos"
                android:scaleType="fitXY"
                android:src="@drawable/clock_rightedge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="2dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_year_shadow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="88"
                        android:textColor="#444444"
                        android:textSize="44sp" />

                    <TextView
                        android:id="@+id/tv_year_digit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="12"
                        android:textColor="#129112"
                        android:textSize="44sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_year_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="2dip"
                    android:text="YR"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_month_shadow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="88"
                        android:textColor="#444444"
                        android:textSize="44sp" />

                    <TextView
                        android:id="@+id/tv_month_digit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="04"
                        android:textColor="#129112"
                        android:textSize="44sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_month_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="2dip"
                    android:text="MO"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_day_shadow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="88"
                        android:textColor="#444444"
                        android:textSize="44sp" />

                    <TextView
                        android:id="@+id/tv_day_digit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="03"
                        android:textColor="#129112"
                        android:textSize="44sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_day_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="2dip"
                    android:text="DAY"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_hour_shadow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="88"
                        android:textColor="#444444"
                        android:textSize="44sp" />

                    <TextView
                        android:id="@+id/tv_hour_digit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="11"
                        android:textColor="#129112"
                        android:textSize="44sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_hour_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="2dip"
                    android:text="HR"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_minute_shadow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="88"
                        android:textColor="#444444"
                        android:textSize="44sp" />

                    <TextView
                        android:id="@+id/tv_minute_digit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="17"
                        android:textColor="#129112"
                        android:textSize="44sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_minute_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="2dip"
                    android:text="MIN"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_Vacation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:gravity="top|center_horizontal"
            android:padding="5dip"
            android:text="ON VACATION"
            android:textColor="#129112"
            android:textSize="44sp" />
    </FrameLayout>
    <!-- END RR CLOCK -->

    <TextView
        android:id="@+id/tv_divider"
        style="@style/ScaleFontMedium"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0"
        android:background="#aaaaaa"
        android:gravity="center_vertical|left"
        android:padding="5dip"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#33000000"
        android:orientation="horizontal" >

        <!-- START PANEL SECTION -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_imag_clock"
            android:orientation="horizontal"
            android:padding="5dip" >

            <ImageView
                android:id="@+id/iv_clockicon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:src="@drawable/clockicon" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_clocklabel"
                    style="@style/ScaleFontSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Vacation Clock"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_updateclock"
                    style="@style/ScaleFontLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/updateclock"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- START PANEL SECTION -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_imag_burnout"
            android:orientation="horizontal"
            android:padding="5dip" >

            <ImageView
                android:id="@+id/iv_burnouticon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:src="@drawable/burnouticon" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_burnoutlabel"
                    style="@style/ScaleFontSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Burnout"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_burnoutlabeltime"
                    style="@style/ScaleFontXSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Update in 28 days"
                    android:textColor="#ffffff"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/btn_updateburnout"
                    style="@style/ScaleFontLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/updateburnout"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- START PANEL SECTION -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_imag_resilience"
            android:orientation="horizontal"
            android:padding="5dip" >

            <ImageView
                android:id="@+id/iv_bkicon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:src="@drawable/bkicon" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_bklabel"
                    style="@style/ScaleFontSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Builders/Killers"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bklabeltime"
                    style="@style/ScaleFontXSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Update Daily"
                    android:textColor="#ffffff"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/btn_updatebk"
                    style="@style/ScaleFontLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/updatebk"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_imag_proqol"
            android:orientation="horizontal"
            android:padding="5dip" >

            <ImageView
                android:id="@+id/iv_proqolicon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:src="@drawable/proqolicon" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_proqollabel"
                    style="@style/ScaleFontSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="ProQOL"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_proqollabeltime"
                    style="@style/ScaleFontXSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Update in 2 days"
                    android:textColor="#ffffff"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/btn_updateproqol"
                    style="@style/ScaleFontLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/updateprqol"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        layout="@layout/main_menu" />

</LinearLayout>