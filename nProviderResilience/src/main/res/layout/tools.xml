<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/videos"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_videos"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:contentDescription="Videos"
            android:padding="10dip"
            android:src="@drawable/ico_videos" />

        <TextView
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/txt_videos"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Videos"
            android:textColor="#ffffff"
            style="@style/ScaleFontLarge" />
    </LinearLayout>

    <!-- END -->
    
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/exercise"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_exercise"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:contentDescription="Physical Excercise"
            android:padding="10dip"
            android:src="@drawable/ico_exercise" />

        <TextView
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/txt_exercise"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Physical Excercise"
            android:textColor="#ffffff"
            style="@style/ScaleFontLarge" />
    </LinearLayout>

    <!-- END -->
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/remindme"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_remindme"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:contentDescription="Remind me why i do this"
            android:padding="10dip"
            android:src="@drawable/ico_remindme" />

        <TextView
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/txt_remindme"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Remind me why I do this"
            android:textColor="#ffffff"
            style="@style/ScaleFontLarge" />
    </LinearLayout>

    <!-- END -->
    
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/videos"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_laugh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:contentDescription="I need a laugh"
            android:padding="10dip"
            android:src="@drawable/ico_exercise" />

        <TextView
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/txt_laugh"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="I need a laugh"
            android:textColor="#ffffff"
            style="@style/ScaleFontLarge" />
    </LinearLayout>
    
    <!-- END -->
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/builderskillers"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_builderskillers"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:contentDescription="ProQOL helper pocket card"
            android:padding="10dip"
            android:src="@drawable/ico_builderskillers" />

        <TextView
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/txt_builderskillers"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="ProQOL Helper Pocket Card"
            android:textColor="#ffffff"
            style="@style/ScaleFontLarge" />
    </LinearLayout>

    <!-- END -->
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/proqol"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_proqol"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:contentDescription="View ProQOL Graph"
            android:padding="10dip"
            android:src="@drawable/ico_proqol" />

        <TextView
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/txt_proqol"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="View ProQOL Graph"
            android:textColor="#ffffff"
            style="@style/ScaleFontLarge" />
    </LinearLayout>

    <!-- END -->
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/burnout"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_burnout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:contentDescription="View Burnout Graph"
            android:padding="10dip"
            android:src="@drawable/ico_burnout" />

        <TextView
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/txt_burnout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="View Burnout Graph"
            android:textColor="#ffffff"
            style="@style/ScaleFontLarge" />
    </LinearLayout>
    <!-- END -->
    
    </LinearLayout>


    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        layout="@layout/main_menu" />

</LinearLayout>